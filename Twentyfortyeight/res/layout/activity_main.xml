<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">

	<LinearLayout
	    android:id="@id/main_screen" 
	    android:layout_width="match_parent"
		android:layout_height="match_parent" android:orientation="vertical">

		<View android:layout_width="match_parent" android:layout_height="0dp"
			android:layout_weight="0.40" />

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="0dp" android:layout_weight="1">

			<dk.compsci.kja.twentyfortyeight.view.Title
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_marginBottom="10dp"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:layout_weight="1" />

			<View android:layout_width="0dp" android:layout_height="match_parent"
				android:layout_weight="0.5" />

			<dk.compsci.kja.twentyfortyeight.view.ScoreView
			    android:id="@id/score_view"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_marginBottom="10dp"
			    android:layout_marginRight="10dp"
			    android:layout_weight="1" />

		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="0dp" android:layout_weight="1"
			android:orientation="horizontal">

			<dk.compsci.kja.twentyfortyeight.view.MainButton
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_marginBottom="10dp"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="5dp"
			    android:layout_weight="1"
			    android:onClick="clickHighscore"
			    android:text="@string/highscores" />

			<dk.compsci.kja.twentyfortyeight.view.MainButton
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_marginBottom="10dp"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="5dp"
			    android:layout_weight="1"
			    android:onClick="clickSettings"
			    android:text="@string/settings" />

			<dk.compsci.kja.twentyfortyeight.view.MainButton
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_marginBottom="10dp"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="10dp"
			    android:layout_weight="1"
			    android:onClick="clickReset"
			    android:text="@string/new_game" />

		</LinearLayout>

		<dk.compsci.kja.twentyfortyeight.view.TwentyfortyeightGrid
		    android:id="@id/grid"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10dp"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp" />

	</LinearLayout>
	
	<LinearLayout
	    android:id="@id/game_over_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:visibility="gone" >

	    <dk.compsci.kja.twentyfortyeight.view.MainButton
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:onClick="clickReset"
	        android:text="@string/try_again" />

		<dk.compsci.kja.twentyfortyeight.view.MainButton
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="clickSubmitScore"
		    android:text="@string/submit_score" />
	        				
	</LinearLayout>
	
</FrameLayout>